<% content_for :title, "Sign In Page - Flip the Joy" %>

<h2>Sign up</h2>

<div class="center-box">
  <div class="form-wrapper">
    <div class="ml-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true %>
        </div>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <%= f.hidden_field :role_id, value: @role_id %>

        <div class="actions home-centered mb-3">
          <%= f.submit "Sign up" %></ br>
        </div>
      <% end %>
      <div class="buttons-inline home-centered mt-3">
        <p>Already have account?</p>
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
